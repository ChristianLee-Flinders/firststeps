datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  users       User[]
}



model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  roleId     String
  role       Role     @relation(fields: [roleId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
